@using EntityLayer.Concretes
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>User's Previous Reservations</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Guest Name & Surname</th>
        <th>Route</th>
        <th>Person Number</th>
        <th>Date</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
        {count += 1;}
        <tr>
             <td>@count</td>
            <td>@item.AppUser.Name @item.AppUser.Surname</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-primary">Details</a></td>
        </tr>
    }
</table>