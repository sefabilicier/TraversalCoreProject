@model IEnumerable<BookingHotelSearchViewModel.Result>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}

<h1>Booking Hotel Reservation</h1>

<h3>Searched: Paris/Fransa</h3>


<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Hotel Name</th>
        <th>Hotel Creditde</th>
        <th>Hotel Comments</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.hotel_name</td>
            @{
                score = double.Parse(item.review_score.ToString()) / 10;
            }
            <td>@score</td>
            @{
                if (item.review_score_word == "Very good")
                {
                    <td>Perfect</td>
                }
                if (item.review_score_word == "Good")
                {
                    <td>Good</td>
                }
                if (item.review_score_word == "Fabulous")
                {
                    <td>Excellent</td>
                }
            }
            <td><a href="#" class="btn btn-outline-dark">Details</a></td>
        </tr>
    }
</table>

