
@model TraversalCoreProject.Models.UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8"/>
	<meta name="keywords"
		content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/signup/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Say hello</h5>
							<h3>CREATE ACCOUNT </h3>
							<p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Est natus facere aperiam!
								Tenetur maiores dolore a quod pariatur ut voluptates quae saepe ea quasi laudantium,
								iste molestias inventore fuga assumenda.</p>
							<a href="/signup/web/index.html" class="read-more-1 btn">Get Started</a>
						</div>
					
					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Join Us</h4>
						<p>Create Your Account, It's Free.</p>
					</div>
					<form method="post" class="signin-form">
							<div class="form-input">
								<label>Name</label>
								<input type="text" asp-for="Name"/> <!--userregisterviewmodel deki elemanları kullanmak için zaten yukarıda mdoel olarak geçtim-->
								<div asp-validation-for="Name" class="text-danger"></div> <!--properties üzerindeki error mesajlarını kullanmak için-->
							</div>

							<div class="form-input">
								<label>Surname</label>
								<input type="text" asp-for="Surname"/>
								<div asp-validation-for="Surname" class="text-danger"></div>
							</div>

							<div class="form-input">
								<label>Userame</label>
								<input type="text" asp-for="UserName"/>
								<div asp-validation-for="UserName" class="text-danger"></div>
							</div>

							<div class="form-input">
								<label>Email</label>
								<input type="email" asp-for="Mail"/>
								<div asp-validation-for="Mail" class="text-danger"></div>
							</div>

							<div class="form-input">
								<label>Password</label>
								<input type="password" asp-for="Password"/>
								<div asp-validation-for="Password" class="text-danger"></div>
							</div>

							<div class="form-input">
								<label>Confirm Password</label>
								<input type="password" asp-for="ConfirmPassword"/>
								<div asp-validation-for="ConfirmPassword" class="text-danger"></div>
							</div>
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							
							<label class="container">I agree to <a href="#">Conditions</a> of Use and <a href="#">Privacy</a>
								<input type="checkbox">
								<span class="checkmark"></span>
							</label>
							<button class="btn">Create account</button>
					</form>
					<div class="copy-right text-center">
						<p>© @DateTime.Now.Year Invent Signup. All rights reserved </p>
					 </div>
				</div>
				
			</div>
			
		</div>
	</section>
	<!-- //login-section -->
</body>

</html>